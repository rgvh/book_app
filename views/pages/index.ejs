<!DOCTYPE html>
<html lang="en">
  <head>
      <%- include('../layouts/head') %>
  </head>

  <body>
    <header>
      <%- include('../layouts/header') %>
    </header>

    <main>
      <h4>Saved Results</h4>
        <p>Total number of books: <%= results.length %></p>
        <ul id="search-results">
          <% results.forEach(function(book) { %>
            <li class="book-items" data-book-id=" <%= book.id %>">
                <div class="book-container">
                  <img src=<%= book.image_url %>
                  <section>
                    <h3><%= book.title %></h3>
                    <span><%= book.author %></span>
                    <p class="description"><%= book.description %></p>
                  </section>
                </div>
              <p class="detail-button"><a href="/books/<%= book.id %>">View details</a></p>
            </li>
          <% }) %>
        </ul>
    </main>

    <footer>
      <%- include('../layouts/footer') %>
    </footer>
  </body>
</html>

