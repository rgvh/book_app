<!DOCTYPE html>
<html lang="en">
  <head>
      <%- include('../../layouts/head') %>
  </head>

  <body>
    <header>
      <%- include('../../layouts/header') %>
    </header>

    <main>
      <h4>Search Results</h4>
        <ul class="search-results">
          <% results.forEach(book => { %>
            <li id= <%= book.isbn %>
              <div class="book-container">
                <img src=<%= book.image_url %>>
                  <section>
                  <h3><%= book.title %></h3>
                  <span><%= book.author %></span>
                  <p class="description"><%= book.description %></p>
                  </section>
              </div>
              <p class="detail-button"><a href="/books/<%= book.id %>">View details</a></p>
              <p class="detail-button"><a href="/books/<%= book.id %>">Add book</a></p>
            </li>
          <% }); %>
        </ul>
    </main>

    <footer>
      <%- include('../../layouts/footer') %>
    </footer>
  </body>
</html>

